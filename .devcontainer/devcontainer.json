{
  "name": "Python DevContainer",
  "dockerFile": "../Dockerfile", // Adjust the path to your Dockerfile
  "settings": {
    "python.pythonPath": "/usr/local/bin/python"
  },
  "extensions": [
    "ms-python.python", // Install the Python extension for Visual Studio Code
    "donjayamanne.python-extension-pack", // Install Python extension pack for additional features
    "ms-python.pylint",  //Linting for python
    "ms-toolsai.jupyter"
  ],
  "forwardPorts": [5678], // Forward port 5678 for debugging
  "appPort": [80], // If needed, forward additional ports
  "mounts": [
    "source=${localWorkspaceFolder}/path/to/your/code,target=/workspace,type=bind"
  ]
}